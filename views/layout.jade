!!!
html
  head
    title= title
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div#wrapper
        div#header
            a(href="/") 
                img#logo(src="/img/meinBlog.png",width="100",height="100")
            div#blog-title
                h1 mein Blog
        div#menu
            ul
                a(href="../") 
                    li home
                  - if (logincheck != true)
                    a(href="../login")
                        li login
                  - if (logincheck == true)
                    a(href="../logout")
                        li logout
                  - if (isAdmin == 'admin')
                    a(href="../admin")
                        li Admin
                  - if (logincheck != true)
                    a(href="../register")
                        li register
                a(href="../users/list")
                    li users
                a(href="../posts/create")
                    li write post
              - if (logincheck == true)       
                div#login-name
                    span logged in as: 
                    span= currentUser

        div#content!= body
